@model List<CountryViewModel>
@{
    ViewData["Title"] = "Countries";
}


<div class="container">
    <div class="row">
        <h3>Countries here</h3>

        <div class="d-block my-2">
            <a class="btn btn-primary float-end" asp-action="CreateCountry">Create Country</a>
        </div>

        @if (Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var country in Model)
                    {
                        <tr>
                            <td>@country.Id</td>
                            <td>@country.Name</td>
                            <td>@country.Code</td>
                            <td><a class="btn btn-primary" asp-action="CountryDetails" asp-route-id="@country.Id">İncele</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="bg-danger">No countries found</p>
        }
    </div>
</div>