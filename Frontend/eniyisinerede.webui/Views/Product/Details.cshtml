@model ProductViewModel
@{
    ViewData["Title"] = "Product Details";
}
<div class="container">
<div class="card">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">@Model.Name</h5>
        </div>
        <div class="card-body">
            <img src="@Model.PictureUrl" alt="" class="card-img-top img-fluid">
            <p class="card-text">@Model.Description</p>
            <h6 class="text-primary">@Model.Price</h6>
        </div>
    </div>
    <a class="btn btn-warning mb-3" asp-action="UpdateProduct" asp-route-id="@Model.Id">Ürünü güncelleyin.</a>
</div>

<a class="text-primary" asp-action="Index"> Ürün listesine dön</a>

</div>