﻿@{
    ViewData["Title"] = "Home Page";
}
@model List<ProductViewModel>


<h2 class="my-3">Ürünler</h2>

@if (Model.Any())
{
    <div class="row offset-2">
        @foreach (var product in Model)
        {
            <div class="col-sm-4 col-md-4 col-4">
                <div class="card mb-3">
                    <img src="@product.PictureUrl" class="card-img-top img-fluid" style="height:256px;">
                    <div class="card-body">
                       
                        <div class="card-text d-block">
                            <p>@product.Description</p>
                        </div>
                        <h6 class="text-primary">@product.Price TL</h6>
                        <div class="col"><a asp-controller="Home" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary d-block btn-sm">Bilgi</a></div>

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center text-danger">
        Ürün bulunamadı.
    </div>
}